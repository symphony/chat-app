{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "strict": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "esm": true
  }
}