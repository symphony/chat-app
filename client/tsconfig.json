{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "ESNext",
    "target": "es5",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "include": [
    "src",
    "./src/**/*.ts*",
  ],
  "paths": {
    "@app/*": [ "./src/*" ],
  },
  "files": [
    "./types.d.ts",
  ],
}