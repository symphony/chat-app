{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "lint": {
      "outputs": [ ]
    },
    "build": {
      "dependsOn": [ "^build" ],
      "outputs": [ "dist/**" ]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "outputs": [ ],
      "inputs": [ "src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx" ]
    },
    "dev": {
      "dependsOn": [ "build" ],
      "cache": false
    },
    "deploy": {
      "dependsOn": [ "build", "lint" ],
      "outputs": [ ]
    }
  }
}