{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "Chatting App to demonstrate Socket.io library",
  "main": "server.js",
  "scripts": {
    "build": "npm run clean && npm run sass && tsc && npm run copy-files",
    "clean": "rm -rf ./dist",
    "copy-files": "cp -rv src/public/index.html dist/public/index.html",
    "sass": "sass src/styles/index.scss:dist/public/styles/index.css",
    "start": "node dist/server.js",
    "dev": "concurrently \"npm run sass -- --watch\" \"npx tsc --watch\" \"nodemon -q dist/server.js\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.1",
    "jquery": "^3.6.0",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jquery": "^3.5.14",
    "concurrently": "^7.3.0",
    "nodemon": "^2.0.19",
    "sass": "^1.54.1",
    "typescript": "^4.7.4"
  }
}
